<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.Login">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_marginHorizontal="44dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="31dp"
        android:orientation="vertical">
        <EditText
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:hint="Họ và tên"
            android:layout_marginTop="36dp"
            android:elevation="@android:dimen/thumbnail_width"
            android:background="@drawable/box"/>
        <EditText
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/box"
            android:elevation="@android:dimen/thumbnail_width"
            android:layout_marginTop="20dp"
            android:hint="Email" />
        <EditText
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/box"
            android:elevation="@android:dimen/thumbnail_width"
            android:layout_marginTop="20dp"
            android:hint="Tên đăng nhập" />
        <EditText
            android:inputType="textPassword"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/box"
            android:elevation="@android:dimen/thumbnail_width"
            android:layout_marginTop="20dp"
            android:hint="Nhập mật khẩu" />
        <EditText
            android:inputType="textPassword"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/box"
            android:elevation="@android:dimen/thumbnail_width"
            android:layout_marginTop="20dp"
            android:hint="Nhập lại mật khẩu" />
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký tài khoản"
            android:textColor="@color/colorTrang"
            android:background="@drawable/boxbutton"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khi ấn đăng ký, bạn đồng ý với các"
            android:fontFamily="@font/robotoregular"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="17dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điều khoản và chính sách"
            android:fontFamily="@font/robotoregular"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="17dp"
            />
        <TextView
            android:id="@+id/tv_quaylaidn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã có tài khoản? Đăng nhập"
            android:fontFamily="@font/robotoregular"
            android:textColor="#2537D8"
            android:textAlignment="center"
            android:textSize="17dp"
            />
    </LinearLayout>

</LinearLayout>
</ScrollView>